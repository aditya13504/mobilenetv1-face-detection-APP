<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permissions -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Optional: Storage permission for saving photos (legacy, max SDK 32) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <!-- Optional: Read permission for older devices (if needed for photo access) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <!-- App is not battery-optimized -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Camera hardware features -->
    <uses-feature
        android:name="android.hardware.camera" android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.any" android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FaceDetection"
        android:hardwareAccelerated="true"
        tools:targetApi="35">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FaceDetection.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Optional: Required if you're using WorkManager in API < 26 -->
        <provider
            android:name="androidx.work.WorkManager"
            android:authorities="${applicationId}.workmanager-init"
            android:exported="false"
            tools:node="remove"
            tools:ignore="Instantiatable" />

    </application>

</manifest>
